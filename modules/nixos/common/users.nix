# modules/nixos/common/users.nix
{ config, lib, pkgs, ... }:
{
  # Your primary user
  users.users.xeseuses = {
    isNormalUser = true;
    description = "Xeseuses";
    
    extraGroups = [
      "wheel"          # sudo access
      "networkmanager" # network management
      "video"          # access to video devices
      "audio"          # access to audio devices
    ];
    
    # SSH keys (same on all machines)
    openssh.authorizedKeys.keys = [
      "ssh-rsa "
    ];
    
    # Shell
    shell = pkgs.bash;
  };
  
  # Sudo without password for wheel group
  security.sudo = {
    enable = true;
    wheelNeedsPassword = false;
  };
  
  # Mutable users (can change passwords with passwd)
  users.mutableUsers = true;
}
